{
  "manifest_version": 3,
  "name": "GhostTab AI",
  "short_name": "GhostTab",
  "version": "2.1.4",
  "description": "Stay focused with tab limits, a Pomodoro timer, themes, and AI tools (summarize, rewrite, translate, sentiment).",
  "minimum_chrome_version": "109",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "https://ghosttab-api-611064069137.us-central1.run.app/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "GhostTab AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "commands": {
    "summarize": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Summarize page or selection"
    },
    "rewrite": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Rewrite selection or page"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_security_policy": {
    "extension_pages": "base-uri 'self'; object-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; connect-src 'self' https://ghosttab-api-611064069137.us-central1.run.app"
  }
}
