{
  "manifest_version": 3,
  "name": "GhostTab AI",
  "version": "2.0.3",
  "description": "Stay focused with tab limits, Pomodoro timer, themes, and AI tools for summarizing, rewriting, translating, and sentiment analysis.",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "exclude_matches": ["*://chrome.google.com/webstore/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "summarize": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Summarize page or selection"
    },
    "rewrite": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Rewrite selection or page"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_security_policy": {
    "extension_pages": "base-uri 'self'; object-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:8000 http://localhost:8000"
  }
}
