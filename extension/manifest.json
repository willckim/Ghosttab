{
  "manifest_version": 3,
  "name": "GhostTab AI",
  "version": "2.1.3",
  "description": "Stay focused with tab limits, Pomodoro timer, themes, and AI tools for summarizing, rewriting, translating, and sentiment analysis.",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "https://ghosttab-api-611064069137.us-central1.run.app/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "GhostTab AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "commands": {
    "summarize": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Summarize page or selection"
    },
    "rewrite": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Rewrite selection or page"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "base-uri 'self'; object-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; connect-src 'self' https://ghosttab-api-611064069137.us-central1.run.app http://127.0.0.1 http://localhost"
  }
}
